@model Onion.Web.Models.Employee.LoginModel
@{
    Layout = null;
}
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HRMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

<section class="vh-100" style="background:#fffafa">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">
              <form asp-controller="Account" asp-action="Login">
                  <h2 class="fw-bold mb-2 text-uppercase">Вход</h2>
                  <p class="text-white-50 mb-5">Введите логин и пароль.</p>

                  <div class="form-outline form-white mb-4">
                    <label class="form-label" asp-for="Email">Логин</label>
                    <input type="email" id="typeEmailX" class="form-control form-control-lg" asp-for="Email" placeholder="E-mail"/>
                  </div>

                  <div class="form-outline form-white mb-4">
                    <label class="form-label" asp-for="Password">Пароль</label>
                    <input type="password" id="typePasswordX" class="form-control form-control-lg" asp-for="Password" placeholder="Пароль"/>
                  </div>

                  <button class="btn btn-outline-light btn-lg px-5" type="submit">Войти</button>
              </form>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>