@model EditDepartmentModel

@{
    ViewData["Title"] = "Create";
}

<h1>Добавить</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Department">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
            </div>
            <div class="form-group">
                    @Html.DropDownListFor(m => m.HeadOfDepartmentId, Model.HeadOfDepartment,new {@class= "form-control"})
            </div>
            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-primary btn-block" />
            </div>
            <div>
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-Id="@Model.Id">Удалить</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-secondary btn-outline-primary" asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}